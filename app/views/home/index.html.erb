<%= stylesheet_link_tag "root" %>

<% @articles.each_with_index do |article, index| %>
   <% if index == 0 %>
      <div class='newest'>
         <div class='newest__cover'>
            <div class='newest__content'>
               <%# Później to będzie article.category %>
               <p class='content__category'>FASHION</p>
               <p class='content__title'> <%= article.title %>  </p>
               <p class='content__date'> <%= format_date(article.created_at) %> </p>
            </div>
         </div>
      </div>
   <% end %>
<% end %>
<div class='row'>
   <% @articles.each_with_index do |article, index| %>
      <% if index.between?(0,2) %>
         <div class='row__article'>
            <div class='article__cover'>
               <div class='content'>
                  <%# Później to będzie article.category %>
                  <p class='content__category first-three'>SPORT</p>
                  <p class='content__title content__title--small'> <%= article.title %>  </p>
                  <p class='content__date content__date-small'> <%= format_date(article.created_at) %> </p>
               </div>
            </div>
         </div>
      <% end %>
   <% end %>
</div>
<%# zrobić tutaj div, który będzie podzielony na dwie części w proporcji 70% do 30% %>
<%# 70% będzie zawierać iterację i zwracać najlepszy post z każdej możliwej kategorii %>
<%# 30% to będzie jako fixed 5 najlepszych postów z wszystkich kategorii oraz 5 kategorii z największą ilością postów %>
<section class='section'>
   <main class='main'>
      <h2 class='main__header'>The Best Of Categories</h2>
      <div class='main__articles'>
         <% @articles.each_with_index do |article, index| %>
            <div class="article">
               <div class='cover'>
                  <div class='cover__content'>
                     <p class='content__category--small'>RUNNING</p>
                     <p class='content__title content__title--small'><%= article.title %></p>
                     <p class='content__description'><%= cut_content(article.content) %></p>
                  </div>
               </div>
            </div>
         <% end %>
      </div>
   </main>
   <%= render 'shared/aside' %>
</section>