<%= stylesheet_link_tag "_aside" %>

<aside class='aside'> 
   <h2 class='aside__header'>Most Popular Posts</h2>
   <div class='popular'>
      <% @best.each_with_index do |article| %>
         <div class="wrapper__article">
            <div class='article__img'></div>
            <div class='content--aside'>
               <div class='article__info'>
                  <div class='info__date'>
                     <i class="far fa-calendar"></i>
                     <span><%= format_date(article.created_at) %></span>
                  </div>
                  <div class="info__owner">
                     <i class="far fa-user"></i>
                     <span>Admin</span>
                  </div>
               </div>
               <p class='article__title'><%= article.title %></p>
            </div>
         </div>
      <% end %>
   </div>
   <div class='biggest'>
      <h2 class='aside__header'>The Biggest Categories</h2>
      <div class="box">
         <div class='element'>
            <p>FASHION</p>
            <p><%= articles_amount(45) %></p>
         </div>
         <div class='element'>
            <p>SPORT</p>
            <p>28</p>
         </div>
         <div class='element'>
            <p>RUNNING</p>
            <p>24</p>
         </div>
         <div class='element'>
            <p>MOVIES</p>
            <p>24</p>
         </div>
         <div class='element'>
            <p>FOOD</p>
            <p>21</p>
         </div>
      </div>
   </div>
</aside>